<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_discover_people_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_10"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_3"
            android:layout_marginBottom="@dimen/dim_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_20" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_3"
            android:layout_marginBottom="@dimen/dim_5"
            android:ellipsize="end"
            android:fontFamily="@font/ayearwithoutrain"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_approve"
        android:layout_width="@dimen/dim_100"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        android:layout_weight="1"
        android:minHeight="@dimen/dim_65"
        android:src="@drawable/correctarrow" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_disapprove"
        android:layout_width="@dimen/dim_100"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="@dimen/dim_65"
        android:src="@drawable/closearrow" />
</LinearLayout>


